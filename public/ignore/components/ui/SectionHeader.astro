---
// src/components/ui/SectionHeader.astro
interface Props {
  title: string;
  level?: 1 | 2 | 3 | 4 | 5 | 6; // HTML heading level
  className?: string;
}

const { title, level = 2, className = '' } = Astro.props;

// Tailwind classes for different heading levels
const headingClasses = {
  1: 'text-4xl lg:text-5xl font-extrabold mb-8 text-gray-900',
  2: 'text-3xl font-bold text-gray-900 mb-6',
  3: 'text-2xl font-semibold text-gray-800 mb-4',
  4: 'text-xl font-semibold text-gray-800 mb-3',
  5: 'text-lg font-semibold text-gray-800 mb-2',
  6: 'text-base font-semibold text-gray-800 mb-1',
};

const Tag = `h${level}` as keyof HTMLElementTagNameMap;
---

<Tag class={`${headingClasses[level]} ${className}`}>
  {title}
</Tag>