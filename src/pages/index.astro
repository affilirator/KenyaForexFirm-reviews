                    {broker.logo}
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold text-white">{broker.name}</h3>
                    <div class="flex items-center mt-1">
                      <div class="flex text-yellow-400">
                        {"‚òÖ".repeat(Math.floor(broker.rating))}
                      </div>
                      <span class="text-neutral-400 ml-2 text-sm">{broker.rating}</span>
                    </div>
                  </div>
                </div>
                <div class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm font-medium">
                  #{index + 1}
                </div>
              </div>

              <!-- Broker details -->
              <div class="space-y-3 mb-6">
                <div class="flex justify-between text-sm">
                  <span class="text-neutral-400">Regulation:</span>
                  <span class="text-white font-medium">{broker.regulation?.join(", ")}</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-neutral-400">Min Deposit:</span>
                  <span class="text-white font-medium">{broker.minDeposit}</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-neutral-400">Avg Spread:</span>
