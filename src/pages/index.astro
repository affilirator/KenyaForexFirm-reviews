  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": site.schemaId,
  "name": site.name,
  "url": site.url,
  "description": site.description,
  Publisher: {
    "@type": "Organization",
    "@id": site.organization.id,
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${site.url}/search?q={search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};


