---
import { fetchRegulatorGlobal } from '../../../lib/regulatorGlobals';
import type { AsicRegulationGlobal } from '../../../types/asicRegulation';
import { RegulatorPageTemplate } from '../../../Hero.astrocomponents/regulators';

// Fetch the BaFin regulation data global api
let regulatorData: AsicRegulationGlobal | null = null;
let error = null;

try {
  regulatorData = await fetchRegulatorGlobal('bafin-regulation');
} catch (err) {
  error = err;
  console.error('Error fetching BaFin regulation data:', err);
}
---

<RegulatorPageTemplate regulatorData={regulatorData} error={error} />