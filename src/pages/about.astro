---
import BaseLayout from '../layouts/BaseLayout.astro';
import AboutHero from '../components/about/AboutHero.astro';
import CoreValues from '../components/about/CoreValues.astro';
import TeamGrid from '../components/about/TeamGrid.astro';
import MethodologyList from '../components/about/MethodologyList.astro';
import CertificationBadges from '../components/about/CertificationBadges.astro';
import { aboutHero, coreValues, team, methodology, certifications, schemaData } from '../data/aboutData';

---

<BaseLayout
  title="About Us - Expert Forex Broker Reviews for Kenyan Traders"
  description="Meet our team of expert analysts providing unbiased forex broker reviews for Kenyan traders. Learn about our methodology, credentials, and commitment to transparency."
  schemaData={schemaData}
>
  <!-- Hero Section -->
  <AboutHero 
    title={aboutHero.title}
    subtitle={aboutHero.subtitle}
    description={aboutHero.description}
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Mission, Vision, Values -->
    <CoreValues values={coreValues} />

    <!-- Team Section -->
    <div class="mb-16">
      <h2 class="text-3xl font-display font-bold text-white mb-8 text-center">
        Our Expert Team
      </h2>
      <TeamGrid team={team} />
    </div>

    <!-- Methodology Section -->
    <div class="mb-16">
      <h2 class="text-3xl font-display font-bold text-white mb-8 text-center">
        Our Review Methodology
      </h2>
      <p class="text-lg text-neutral-300 max-w-4xl mx-auto text-center mb-8">
        We follow a rigorous, data-driven approach to evaluate forex brokers. Our methodology ensures comprehensive, 
        unbiased assessments focused on the needs of Kenyan traders.
      </p>
      <MethodologyList items={methodology} />
    </div>

    <!-- Certifications Section -->
    <div class="mb-16">
      <h2 class="text-3xl font-display font-bold text-white mb-8 text-center">
        Our Certifications
      </h2>
      <CertificationBadges certifications={certifications} />
    </div>

    <!-- Contact CTA -->
    <div class="card-glass p-8 text-center">
      <h2 class="text-2xl font-display font-bold text-white mb-4">
        Have Questions?
      </h2>
      <p class="text-neutral-300 mb-6">
        Our team is ready to assist you with any questions about forex brokers or our review process.
      </p>
      <a href="/contact" class="btn-primary inline-block">
        Contact Our Team
      </a>
    </div>
  </div>
</BaseLayout>