                <p class="text-neutral-400 text-sm">{member.experience}</p>
              </div>

              <div>
                <h4 class="text-sm font-medium text-neutral-300 mb-2">Bio</h4>
                <p class="text-neutral-400 text-sm">{member.bio}</p>
              </div>

              <div>
                <h4 class="text-sm font-medium text-neutral-300 mb-2">Expertise</h4>
                <div class="flex flex-wrap gap-1">
                  {member.expertise.map(skill => (
                    <span class="bg-primary-500/20 text-primary-400 px-2 py-1 rounded text-xs">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Methodology -->
  <section class="py-20 bg-gradient-to-b from-neutral-900 to-neutral-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
