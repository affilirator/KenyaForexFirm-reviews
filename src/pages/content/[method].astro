---
// Dynamic page for brokers filtered by payment broker
import BaseLayout from '~/layouts/BaseLayout.astro';
import BrokerList from '~/components/BrokerList.astro';
import BrokerDetails from '~/components/BrokerDetails.astro';
import SEOContent from '~/components/SEOContent.astro';


import { site } from '~/data/site';
import { getMpesaForexBrokers } from '~/lib/qs-esm';

export async function getStaticPaths() {
  const { docs: brokers } = await getMpesaForexBrokers();
  
  return brokers.map(broker => (
    { params: { method: broker.slug }, 
    props: { broker, brokers } 
  }));
}

const { broker, brokers } = Astro.props;

//const mpesa = broker.paymentMethods?.filter(method => method.toLowerCase().includes('mpesa'))?.length > 0;

// SEO optimization
const title = `Best Forex Brokers with ${broker} ${new Date().getFullYear()} - Kenya`;
const description = `Find top forex brokers accepting ${broker} payments in Kenya. Compare spreads, features, and reviews of ${broker} supported brokers for Kenyan traders.`;

// Schema markup
const schemaData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description,
  "url": `${site.url}/brokers/funding/${broker.slug.toLowerCase().replace(' ', '-')}/`,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": brokers.length,
    "itemListElement": brokers.map((broker, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "FinancialService",
        "name": broker.brokerName,
        "url": `${site.url}/brokers/${broker.slug}/`
      }
    }))
  }
};
---

<BaseLayout title={title} description={description} schemaData={schemaData}>
  <!-- Hero Section -->
  <section class="pt-24 pb-12 bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6">
          Best Forex Brokers with {broker}
        </h1>
        <p class="text-xl text-neutral-300 max-w-4xl mx-auto leading-relaxed">
          Discover forex brokers that accept {broker} payments. Perfect for Kenyan traders looking for convenient and familiar funding options.
        </p>
      </div>
    </div>
  </section>

  <BrokerList 
    brokers={brokers}
    title={`${brokers.length} Brokers Supporting ${broker}`}
    description={`All brokers below accept ${broker} for deposits and withdrawals.`}
  />

  <BrokerDetails brokers={brokers} filterType="payment" filterName={'mPesa'} />

  <SEOContent type="payment" name={broker.brokerName || broker.slug} brokerCount={brokers.length} />
</BaseLayout>