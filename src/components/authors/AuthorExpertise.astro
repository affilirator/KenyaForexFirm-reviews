---
import type { AuthorKnowsAbout } from '../../types/author';

interface Props {
  expertise: AuthorKnowsAbout[];
}

const { expertise } = Astro.props;
---

<div class="bg-neutral-800/50 border border-neutral-700/50 rounded-xl overflow-hidden">
  <div class="p-6">
    <h2 class="text-xl font-bold text-white mb-4">Areas of Expertise</h2>
    
    <div class="space-y-6">
      {expertise.map(item => (
        <div>
          <h3 class="text-lg font-medium text-white mb-1">
            <a href={item.fieldUrl} target="_blank" rel="noopener noreferrer" class="hover:text-primary-400">
              {item.fieldName}
            </a>
          </h3>
          <p class="text-neutral-300 text-sm">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</div>