---
interface Props {
  title: string;
  subtitle: string;
  lastUpdated?: string;
}

const { title, subtitle, lastUpdated } = Astro.props;
---

<section class="pt-24 pb-12 bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-950">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">
        {title}
      </h1>
      <p class="text-xl text-neutral-300">
        {subtitle}
      </p>
      {lastUpdated && (
        <p class="text-sm text-neutral-400 mt-4">
          Last Updated: {lastUpdated}
        </p>
      )}
    </div>
  </div>
</section>