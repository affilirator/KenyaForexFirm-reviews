---
interface Props {
  title?: string;
  message?: string;
  backLink?: {
    text: string;
    url: string;
  };
}

const {
  title = 'Error Loading Data',
  message = 'We encountered an error while loading the requested information. Please try again later.',
  backLink = {
    text: 'Go Back',
    url: '/',
  },
} = Astro.props;
---

<div class="py-20 px-4 text-center">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl md:text-3xl font-bold text-red-600 mb-4 font-display">
      {title}
    </h1>
    <p class="text-neutral-700 mb-8">{message}</p>
    <a
      href={backLink.url}
      class="inline-block px-6 py-2 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors"
    >
      {backLink.text}
    </a>
  </div>
</div>
