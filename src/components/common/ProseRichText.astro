---
import RichText from '~/components/common/RichText';
import PinterestHover from '~/components/social/PinterestHover.astro';
import RichTextRenderer from './RichTextRenderer.astro';
interface Props {
  content: any;
  className?: string;
  title: string;
  description?: string;
  weight?: number;
}

const { title, content, className, description, weight } = Astro.props;

//const data = await getSafetyRegulation();
---

<div class="richtext p-6 lg:p-8">
  <div class="mb-6 items-center justify-center">
    <h2
      class="text-2xl font-display text-center font-bold text-white mb-2 mx-auto"
    >
      {title}
    </h2>
  </div>
  <PinterestHover />
  
  <RichText
    content={content}
    className="dark text-neutral-200 font-sans richtext"
  />
</div>
