---
import RichText from '~/components/common/RichText';
import PinterestHover from '~/components/social/PinterestHover.astro';
import RichTextRenderer from './RichTextRenderer.astro';
interface Props {
  content: any;
  className?: string;
  title: string;
  description?: string;
  weight?: number;
}

const { title, content, className, description, weight } = Astro.props;

//const data = await getSafetyRegulation();
---

<div class="richtext mx-auto w-full">
  <h2
    class="text-3xl md:text-4xl lg:text-5xl font-display font-semibold text-foreground mt-5 mb-5 leading-tight mx-auto max-w-4xl text-neutral-200"
  >
    {title}
  </h2>

  <PinterestHover />

  <RichText
    content={content}
    className="dark text-neutral-200 font-sans richtext p-6 lg:p-8 mx-auto "
  />
</div>
