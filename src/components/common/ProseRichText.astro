---
import RichText from '~/components/common/RichText';
import PinterestHover from '~/components/social/PinterestHover.astro';
interface Props {
  content: any;
  className?: string;
  title: string;
  description?: string;
  weight?: number;
}

const { title, content, className, description, weight } = Astro.props;

//const data = await getSafetyRegulation();
---

<div
  class="bg-neutral-800/30 backdrop-blur-sm border border-neutral-700/50 rounded-2xl p-6 lg:p-8"
>
  <div class="mb-6">
    <h2 class="text-2xl font-display font-bold text-white mb-2 block mx-auto">
      {title}
    </h2>
  </div>
  <PinterestHover />
  <RichText
    content={content}
    className=" dark text-neutral-200 font-sans"
  />
</div>
