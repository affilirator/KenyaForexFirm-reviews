---
// src/components/BrokerCard.astro
import type { BrokerProps } from '~/types';

interface Props {
  broker: BrokerProps;
  index: number;
}

const { broker, index } = Astro.props;
const logoUrl = typeof broker.logo === 'string' ? broker.logo : broker.logo?.url;
const scaledRating = broker.brokerRating / 2;
const fullStars = Math.floor(scaledRating);
const hasHalfStar = scaledRating % 1 >= 0.5;
---

<article class="broker-card group relative bg-white/5 backdrop-blur-md rounded-3xl border border-white/10 hover:border-primary-400/30 hover:bg-white/10 transition-all duration-300 overflow-hidden shadow-xl hover:shadow-2xl"
     data-broker-id={broker.id}
     data-rating={broker.brokerRating}
     data-spread={typeof broker.spread === 'number' ? broker.spread.toString() : broker.spread}
     data-deposit={broker.minDeposit}
     data-regulation={broker.regulation?.map(r => r.shortName).join(' ').toLowerCase()}
     data-cma={broker.cmaApproved}
     data-bonus={broker.bonusAvailable}
     data-islamic={broker.islamicAccount}>

  <!-- Ranking Badge -->
  <div class="absolute top-4 right-4 z-10">
    <div class="bg-gradient-to-r from-primary-500 to-accent-500 text-white text-sm font-bold px-3 py-1.5 rounded-full shadow-lg">
      #{index + 1}
    </div>
  </div>

  <div class="p-6 sm:p-8">
    <!-- Header Section -->
    <header class="flex flex-col sm:flex-row sm:items-start gap-4 mb-6">
      <div class="flex items-center gap-4 flex-1">
        <!-- Logo -->
        <div class="w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-br from-primary-500 to-accent-500 rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-105 transition-transform duration-300 flex-shrink-0">
          {logoUrl ? (
            <img src={logoUrl} alt={`${broker.brokerName} logo`} class="w-full h-full object-contain rounded-2xl" />
          ) : (
            <span class="text-white font-bold text-xl">{broker.brokerName.charAt(0)}</span>
          )}
        </div>

        <!-- Broker Info -->
        <div class="min-w-0 flex-1">
          <h3 class="text-xl sm:text-2xl font-bold text-white mb-2 truncate">{broker.brokerName}</h3>
          
          <!-- Rating & Badges -->
          <div class="flex flex-wrap items-center gap-2 mb-2">
            <div class="flex items-center gap-1">
              <div class="flex text-yellow-400 text-lg">
                {"★".repeat(fullStars)}
                {hasHalfStar && "☆"}
              </div>
              <span class="text-neutral-300 text-sm font-medium">{broker.brokerRating.toFixed(1)}</span>
            </div>
            
            {broker.cmaApproved && (
              <span class="bg-emerald-500/20 text-emerald-400 px-2.5 py-1 rounded-full text-xs font-semibold border border-emerald-500/30">
                CMA Approved
              </span>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Key Metrics Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 sm:gap-4 mb-6">
      <div class="bg-neutral-800/40 backdrop-blur-sm rounded-xl p-3 sm:p-4 text-center border border-neutral-700/30">
        <div class="text-xs sm:text-sm text-neutral-400 mb-1">Min Deposit</div>
        <div class="text-lg sm:text-xl font-bold text-white">${broker.minDeposit}</div>
      </div>
      
      <div class="bg-neutral-800/40 backdrop-blur-sm rounded-xl p-3 sm:p-4 text-center border border-neutral-700/30">
        <div class="text-xs sm:text-sm text-neutral-400 mb-1">Spread</div>
        <div class="text-lg sm:text-xl font-bold text-white">
          {typeof broker.spread === 'number' ? `${broker.spread}` : broker.spread}
        </div>
      </div>
      
      <div class="bg-neutral-800/40 backdrop-blur-sm rounded-xl p-3 sm:p-4 text-center border border-neutral-700/30 col-span-2 sm:col-span-1">
        <div class="text-xs sm:text-sm text-neutral-400 mb-1">Leverage</div>
        <div class="text-lg sm:text-xl font-bold text-white">{broker.maxLeverage}</div>
      </div>
    </div>

    <!-- Tags Section -->
    <div class="space-y-4 mb-6">
      {broker.regulation && broker.regulation.length > 0 && (
        <div>
          <h4 class="text-sm font-semibold text-neutral-300 mb-2">Regulation</h4>
          <div class="flex flex-wrap gap-2">
            {broker.regulation.slice(0, 3).map(reg => (
              <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-xs font-medium border border-blue-500/30">
                {reg.shortName}
              </span>
            ))}
          </div>
        </div>
      )}
      
      {broker.features && broker.features.length > 0 && (
        <div>
          <h4 class="text-sm font-semibold text-neutral-300 mb-2">Features</h4>
          <div class="flex flex-wrap gap-2">
            {broker.features.slice(0, 4).map(feature => (
              <span class="bg-primary-500/20 text-primary-300 px-3 py-1 rounded-full text-xs font-medium border border-primary-500/30">
                {feature}
              </span>
            ))}
          </div>
        </div>
      )}
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-neutral-700/30">
      <a href={`/brokers/${broker.slug}/`}
         class="flex-1 bg-gradient-to-r from-primary-600 to-accent-600 hover:from-primary-500 hover:to-accent-500 text-white font-semibold py-3 px-6 rounded-xl transition-all duration-300 hover:shadow-lg hover:scale-[1.02] text-center focus:outline-none focus:ring-2 focus:ring-primary-500/50">
        View Review
      </a>
      
      <button class="compare-btn bg-neutral-700/50 hover:bg-neutral-600/50 text-neutral-200 hover:text-white font-semibold py-3 px-6 rounded-xl transition-all duration-300 border border-neutral-600/50 hover:border-neutral-500/50 focus:outline-none focus:ring-2 focus:ring-neutral-500/50"
              data-broker-id={broker.id}>
        Compare
      </button>
    </div>
  </div>
</article>
