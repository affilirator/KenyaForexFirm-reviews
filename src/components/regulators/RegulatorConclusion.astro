---
// RegulatorConclusion.astro - Conclusion component for regulator pages
import RichTextRenderer from './RichTextRenderer.astro';

interface Props {
  sectionTitle: string;
  sectionId: string;
  content: any; // Rich text content Added conclusion
}

const { sectionTitle, sectionId, content } = Astro.props;
---

<section id={sectionId} class="py-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-primary-400/5 to-accent-400/5 scroll-mt-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-cyber-grid bg-[length:30px_30px] opacity-10"></div>
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="bg-white/80 backdrop-blur-sm rounded-xl shadow-lg p-8 border border-neutral-200">
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-8 font-display">
        {sectionTitle}
      </h2>
      
      <div class="prose prose-lg max-w-none text-neutral-800 prose-headings:font-display prose-headings:text-neutral-900 prose-a:text-primary-600 prose-a:no-underline hover:prose-a:underline">
        <RichTextRenderer content={content} />
      </div>
    </div>
  </div>
</section>