---
// RegulatorSection.astro - Reusable section component for regulator pages
import RichTextRenderer from './RichTextRenderer.astro';

interface Props {
  sectionTitle: string;
  sectionId: string;
  content: any; // Rich text content
  featuredImage?: {
    url: string;
    alt: string;
  };
  imagePosition?: 'left' | 'right' | 'top' | 'bottom';
  keyPoints?: Array<{ point: string }>;
}

const { 
  sectionTitle, 
  sectionId, 
  content, 
  featuredImage, 
  imagePosition = 'right',
  keyPoints = []
} = Astro.props;

const hasKeyPoints = keyPoints && keyPoints.length > 0;
---

<section id={sectionId} class="py-12 px-4 sm:px-6 lg:px-8 scroll-mt-16">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">
      {sectionTitle}
    </h2>
    
    {/* Image at the top */}
    {featuredImage && imagePosition === 'top' && (
      <div class="mb-8">
        <img 
          src={featuredImage.url} 
          alt={featuredImage.alt || sectionTitle} 
          class="rounded-lg shadow-md w-full h-auto object-cover max-h-96"
        />
      </div>
    )}
    
    <div class={`
      ${featuredImage && (imagePosition === 'left' || imagePosition === 'right') ? 'flex flex-col md:flex-row gap-8' : ''}
      ${featuredImage && imagePosition === 'left' ? 'md:flex-row-reverse' : ''}
    `}>
      {/* Content with side image */}
      <div class={`
        ${featuredImage && (imagePosition === 'left' || imagePosition === 'right') ? 'md:w-2/3' : 'w-full'}
        prose prose-blue max-w-none
      `}>
        <RichTextRenderer content={content} />
        
        {hasKeyPoints && (
          <div class="mt-8 bg-blue-50 p-6 rounded-lg border-l-4 border-blue-500">
            <h3 class="text-xl font-semibold mb-4">Key Points</h3>
            <ul class="space-y-2">
              {keyPoints.map((item) => (
                <li class="flex items-start">
                  <span class="text-blue-600 mr-2">âœ“</span>
                  <span>{item.point}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
      
      {/* Side image */}
      {featuredImage && (imagePosition === 'left' || imagePosition === 'right') && (
        <div class="md:w-1/3">
          <img 
            src={featuredImage.url} 
            alt={featuredImage.alt || sectionTitle} 
            class="rounded-lg shadow-md w-full h-auto object-cover sticky top-24"
          />
        </div>
      )}
    </div>
    
    {/* Image at the bottom */}
    {featuredImage && imagePosition === 'bottom' && (
      <div class="mt-8">
        <img 
          src={featuredImage.url} 
          alt={featuredImage.alt || sectionTitle} 
          class="rounded-lg shadow-md w-full h-auto object-cover max-h-96"
        />
      </div>
    )}
  </div>
</section>