---
import type { Regulator } from '../../types/regulator';

interface Props {
  regulator: Regulator;
}

const { regulator } = Astro.props;
---

<div class="bg-neutral-800/50 border border-neutral-700/50 rounded-xl overflow-hidden hover:border-primary-500/30 transition-all">
  <div class="p-6">
    <div class="flex items-center gap-4 mb-4">
      {regulator.logo && (
        <div class="flex-shrink-0">
          <img 
            src={regulator.logo.url} 
            alt={regulator.name} 
            class="w-16 h-16 object-contain bg-white rounded-lg p-1"
          />
        </div>
      )}
      <div>
        <h3 class="text-xl font-bold text-white">
          {regulator.name}
        </h3>
        <div class="flex items-center gap-2 mt-1">
          <span class="bg-primary-500/20 text-primary-400 px-2 py-0.5 rounded text-xs font-medium">
            {regulator.shortName}
          </span>
          <span class="text-neutral-400 text-sm">
            {regulator.country}
          </span>
        </div>
      </div>
    </div>
    
    <p class="text-neutral-300 text-sm mb-4 line-clamp-3">
      {regulator.description}
    </p>
    
    <div class="grid grid-cols-2 gap-4 mb-4">
      <div class="bg-neutral-700/30 p-3 rounded-lg">
        <div class="text-xs text-neutral-400">Trust Score</div>
        <div class="text-lg font-bold text-white">{regulator.trustScore}/100</div>
      </div>
      <div class="bg-neutral-700/30 p-3 rounded-lg">
        <div class="text-xs text-neutral-400">Max Leverage</div>
        <div class="text-lg font-bold text-white">{regulator.maxLeverage}</div>
      </div>
    </div>
    
    <div class="flex justify-between items-center">
      <div class="text-sm text-neutral-400">
        Established: {regulator.established}
      </div>
      <a 
        href={regulator.website} 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-primary-400 hover:text-primary-300 text-sm font-medium flex items-center gap-1"
      >
        Visit Website
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</div>