---
// RegulatorRelatedContent.astro - Related content component for regulator pages
interface RelatedArticle {
  title: string;
  description?: string;
  link: string;
  image?: {
    url: string;
    alt?: string;
  };
}

interface Props {
  sectionTitle: string;
  articles: RelatedArticle[];
}

const { sectionTitle, articles = [] } = Astro.props;
const hasArticles = articles && articles.length > 0;
---

<section class="py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-10 font-display">
      {sectionTitle}
    </h2>
    
    {hasArticles ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article) => (
          <a 
            href={article.link} 
            class="group bg-white/90 backdrop-blur-sm rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:border-primary-500/30 border border-neutral-200 transition-all duration-300 flex flex-col h-full"
          >
            {article.image && (
              <div class="relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 to-accent-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 z-10"></div>
                <img 
                  src={article.image.url} 
                  alt={article.image.alt || article.title} 
                  class="w-full h-52 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
                />
              </div>
            )}
            
            <div class="p-6 flex-grow flex flex-col">
              <h3 class="text-lg font-semibold text-neutral-900 group-hover:text-primary-600 transition-colors duration-300 font-display">
                {article.title}
              </h3>
              
              {article.description && (
                <p class="mt-3 text-neutral-700 line-clamp-3 flex-grow">
                  {article.description}
                </p>
              )}
              
              <div class="mt-4 flex items-center text-primary-600">
                <span class="font-medium">Read more</span>
                <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1.5 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-neutral-500 italic">No related articles available</p>
    )}
  </div>
</section>