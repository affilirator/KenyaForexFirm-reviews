---
// RegulatorRelatedContent.astro - Related content component for regulator pages
interface RelatedArticle {
  title: string;
  description?: string;
  link: string;
  image?: {
    url: string;
    alt?: string;
  };
}

interface Props {
  sectionTitle: string;
  articles: RelatedArticle[];
}

const { sectionTitle, articles = [] } = Astro.props;
const hasArticles = articles && articles.length > 0;
---

<section class="py-20 px-4 sm:px-6 lg:px-8 relative">
  <div
    class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(56,189,248,0.03),transparent_80%)]"
  >
  </div>
  <div class="max-w-7xl mx-auto relative z-10">
    <h2
      class="text-3xl md:text-4xl font-bold text-neutral-900 mb-12 font-display tracking-tight relative inline-block"
    >
      <span class="relative z-10">{sectionTitle}</span>
      <span
        class="absolute -bottom-1 left-0 w-full h-1 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full"
      ></span>
    </h2>

    {
      hasArticles ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {articles.map((article) => (
            <a
              href={article.link}
              class="group bg-white/95 backdrop-blur-md rounded-xl shadow-lg overflow-hidden hover:shadow-xl hover:border-primary-500/40 border border-neutral-200 transition-all duration-300 flex flex-col h-full relative"
            >
              <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary-500 to-accent-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left z-20" />
              <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,rgba(56,189,248,0.07),transparent_70%)] opacity-0 group-hover:opacity-100 transition-opacity duration-300" />

              {article.image && (
                <div class="relative overflow-hidden">
                  <div class="absolute inset-0 bg-gradient-to-br from-primary-500/30 to-accent-500/30 opacity-0 group-hover:opacity-70 transition-opacity duration-300 z-10" />
                  <img
                    src={article.image.url}
                    alt={article.image.alt || article.title}
                    class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500 ease-in-out"
                  />
                  <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-black/60 to-transparent z-10" />
                  <div class="absolute bottom-3 left-4 z-10">
                    <span class="bg-primary-500/90 text-white px-3 py-1 rounded-full text-xs font-medium backdrop-blur-sm">
                      Related Article
                    </span>
                  </div>
                </div>
              )}

              <div class="p-7 flex-grow flex flex-col relative z-10">
                <h3 class="text-lg font-semibold text-neutral-900 group-hover:text-primary-600 transition-colors duration-300 font-display tracking-tight">
                  {article.title}
                </h3>

                {article.description && (
                  <p class="mt-3 text-neutral-700 line-clamp-3 flex-grow leading-relaxed">
                    {article.description}
                  </p>
                )}

                <div class="mt-5 flex items-center text-primary-600 group/btn">
                  <span class="font-medium">Read more</span>
                  <svg
                    class="w-4 h-4 ml-1.5 transform group-hover/btn:translate-x-1.5 transition-transform duration-300"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-neutral-500 italic p-6 border border-dashed border-neutral-300 rounded-lg text-center bg-white/50 max-w-lg mx-auto">
          No related articles available
        </div>
      )
    }
  </div>
</section>
