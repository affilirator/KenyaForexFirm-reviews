---
// RegulatorBrokers.astro - Component for displaying brokers regulated by this authority
import type { RegulatedBroker } from '../../types/regulator';

interface Props {
  sectionTitle: string;
  sectionId: string;
  brokers: RegulatedBroker[];
}

const { sectionTitle, sectionId, brokers = [] } = Astro.props;
const hasBrokers = brokers && brokers.length > 0;
---

<section id={sectionId} class="py-16 px-4 sm:px-6 lg:px-8 bg-neutral-100/50 scroll-mt-20 relative overflow-hidden">
  <div class="absolute inset-0 bg-cyber-grid bg-[length:30px_30px] opacity-10"></div>
  <div class="max-w-7xl mx-auto relative z-10">
    <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-8 font-display">
      {sectionTitle}
    </h2>
    
    {hasBrokers ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {brokers.map((broker) => (
          <div class="bg-white/90 backdrop-blur-sm rounded-xl shadow-md p-6 border border-neutral-200 hover:border-primary-500/30 hover:shadow-lg transition-all duration-300">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-semibold text-neutral-900">
                <a href={`/brokers/${broker.slug}`} class="hover:text-primary-600 transition-colors">
                  {broker.brokerName}
                </a>
              </h3>
              <div class="flex items-center bg-primary-500/10 px-3 py-1 rounded-full">
                <span class="text-primary-600 font-bold">{broker.brokerRating}</span>
                <span class="text-primary-600 ml-1">/10</span>
              </div>
            </div>
            
            <p class="text-neutral-700 mb-4 line-clamp-2">
              {broker.title.replace(broker.brokerName, '').replace('Review -', '').trim()}
            </p>
            
            <a 
              href={`/brokers/${broker.slug}`}
              class="inline-flex items-center text-primary-600 hover:text-primary-500 font-medium"
            >
              Read Review
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        ))}
      </div>
    ) : (
      <p class="text-neutral-500 italic">No regulated brokers available</p>
    )}
  </div>
</section>