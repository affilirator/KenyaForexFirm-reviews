---
// RegulatorRequirements.astro - Component for displaying broker requirements
import RichTextRenderer from './RichTextRenderer.astro';

interface Props {
  sectionTitle: string;
  sectionId: string;
  content: any; // Rich text content
  capitalRequirements?: {
    minimumCapital: string;
    details?: any; // Rich text content
  };
  clientMoneyProtection?: {
    protectionLimit: string;
    details?: any; // Rich text content
  };
  leverageLimits?: {
    retailClients: string;
    professionalClients: string;
    details?: any; // Rich text content
  };
}

const {
  sectionTitle,
  sectionId,
  content,
  capitalRequirements,
  clientMoneyProtection,
  leverageLimits,
} = Astro.props;
---

<section
  id={sectionId}
  class="py-20 px-4 sm:px-6 lg:px-8 scroll-mt-20 relative"
>
  <div
    class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(56,189,248,0.03),transparent_80%)]"
  >
  </div>
  <div class="max-w-7xl mx-auto relative z-10">
    <h2
      class="text-3xl md:text-4xl font-bold text-neutral-900 mb-10 font-display tracking-tight relative inline-block"
    >
      <span class="relative z-10">{sectionTitle}</span>
      <span
        class="absolute -bottom-1 left-0 w-full h-1 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full"
      ></span>
    </h2>

    <div class="prose prose-lg max-w-none mb-14 text-neutral-800">
      <RichTextRenderer content={content} />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {/* Capital Requirements */}
      <div
        class="bg-white/95 backdrop-blur-md rounded-xl shadow-lg p-7 border border-neutral-200 hover:border-primary-500/40 hover:shadow-xl transition-all duration-300 group relative overflow-hidden"
      >
        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary-500 to-primary-600"
        >
        </div>
        <div
          class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,rgba(56,189,248,0.07),transparent_70%)] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>

        <div class="flex items-center mb-6 relative z-10">
          <div
            class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center text-white mr-4 shadow-md group-hover:shadow-lg group-hover:scale-110 transition-all duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
              <path
                fill-rule="evenodd"
                d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-semibold text-neutral-900 font-display tracking-tight"
          >
            Capital Requirements
          </h3>
        </div>

        {
          capitalRequirements?.minimumCapital ? (
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6 bg-gradient-to-br from-primary-500/10 to-primary-600/5 p-4 rounded-lg border border-primary-500/10">
                <span class="text-neutral-700 font-medium">
                  Minimum Capital:
                </span>
                <span class="font-bold text-lg text-neutral-900">
                  {capitalRequirements.minimumCapital}
                </span>
              </div>

              {capitalRequirements.details && (
                <div class="mt-5 pt-4 border-t border-neutral-200">
                  <div class="prose prose-sm max-w-none text-neutral-800">
                    <RichTextRenderer content={capitalRequirements.details} />
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="text-neutral-500 italic p-4 border border-dashed border-neutral-300 rounded-lg text-center bg-white/50 relative z-10">
              Information not available
            </div>
          )
        }
      </div>

      {/* Client Money Protection */}
      <div
        class="bg-white/95 backdrop-blur-md rounded-xl shadow-lg p-7 border border-neutral-200 hover:border-accent-500/40 hover:shadow-xl transition-all duration-300 group relative overflow-hidden"
      >
        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-accent-500 to-accent-600"
        >
        </div>
        <div
          class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,rgba(232,121,249,0.07),transparent_70%)] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>

        <div class="flex items-center mb-6 relative z-10">
          <div
            class="w-12 h-12 rounded-full bg-gradient-to-br from-accent-500 to-accent-600 flex items-center justify-center text-white mr-4 shadow-md group-hover:shadow-lg group-hover:scale-110 transition-all duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-semibold text-neutral-900 font-display tracking-tight"
          >
            Client Money Protection
          </h3>
        </div>

        {
          clientMoneyProtection?.protectionLimit ? (
            <div class="relative z-10">
              <div class="flex items-center justify-between mb-6 bg-gradient-to-br from-accent-500/10 to-accent-600/5 p-4 rounded-lg border border-accent-500/10">
                <span class="text-neutral-700 font-medium">
                  Protection Limit:
                </span>
                <span class="font-bold text-lg text-neutral-900">
                  {clientMoneyProtection.protectionLimit}
                </span>
              </div>

              {clientMoneyProtection.details && (
                <div class="mt-5 pt-4 border-t border-neutral-200">
                  <div class="prose prose-sm max-w-none text-neutral-800">
                    <RichTextRenderer content={clientMoneyProtection.details} />
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="text-neutral-500 italic p-4 border border-dashed border-neutral-300 rounded-lg text-center bg-white/50 relative z-10">
              Information not available
            </div>
          )
        }
      </div>

      {/* Leverage Limits */}
      <div
        class="bg-white/95 backdrop-blur-md rounded-xl shadow-lg p-7 border border-neutral-200 hover:border-primary-400/40 hover:shadow-xl transition-all duration-300 group relative overflow-hidden"
      >
        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-primary-400 to-primary-500"
        >
        </div>
        <div
          class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,rgba(56,189,248,0.07),transparent_70%)] opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
        </div>

        <div class="flex items-center mb-6 relative z-10">
          <div
            class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-400 to-primary-500 flex items-center justify-center text-white mr-4 shadow-md group-hover:shadow-lg group-hover:scale-110 transition-all duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
          <h3
            class="text-xl font-semibold text-neutral-900 font-display tracking-tight"
          >
            Leverage Limits
          </h3>
        </div>

        {
          leverageLimits?.retailClients ? (
            <div class="relative z-10">
              <div class="space-y-4 mb-6">
                <div class="flex items-center justify-between bg-gradient-to-br from-primary-400/10 to-primary-500/5 p-4 rounded-lg border border-primary-400/10">
                  <span class="text-neutral-700 font-medium">
                    Retail Clients:
                  </span>
                  <span class="font-bold text-lg text-neutral-900">
                    {leverageLimits.retailClients}
                  </span>
                </div>

                <div class="flex items-center justify-between bg-gradient-to-br from-primary-400/10 to-primary-500/5 p-4 rounded-lg border border-primary-400/10">
                  <span class="text-neutral-700 font-medium">
                    Professional Clients:
                  </span>
                  <span class="font-bold text-lg text-neutral-900">
                    {leverageLimits.professionalClients}
                  </span>
                </div>
              </div>

              {leverageLimits.details && (
                <div class="mt-5 pt-4 border-t border-neutral-200">
                  <div class="prose prose-sm max-w-none text-neutral-800">
                    <RichTextRenderer content={leverageLimits.details} />
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="text-neutral-500 italic p-4 border border-dashed border-neutral-300 rounded-lg text-center bg-white/50 relative z-10">
              Information not available
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>
