---
import type { Regulator } from '../../types/regulator';

interface Props {
  regulator: Regulator;
}

const { regulator } = Astro.props;

// Format date to display year only
const establishedYear = regulator.established || 'N/A';
---

<div class="bg-neutral-800/50 border border-neutral-700/50 rounded-xl overflow-hidden">
  <div class="p-6">
    <div class="flex flex-col md:flex-row gap-6 mb-6">
      <div class="flex-shrink-0 flex items-center justify-center">
        {regulator.logo && (
          <img 
            src={regulator.logo.url} 
            alt={regulator.name} 
            class="w-32 h-32 object-contain bg-white rounded-lg p-2"
          />
        )}
      </div>
      
      <div class="flex-grow">
        <h1 class="text-3xl font-bold text-white mb-2">{regulator.name}</h1>
        <div class="flex flex-wrap items-center gap-3 mb-4">
          <span class="bg-primary-500/20 text-primary-400 px-3 py-1 rounded-lg text-sm font-medium">
            {regulator.shortName}
          </span>
          <span class="text-neutral-400">
            {regulator.country}
          </span>
          <span class="text-neutral-400">â€¢</span>
          <span class="text-neutral-400">
            Established: {establishedYear}
          </span>
        </div>
        
        <div class="flex items-center gap-3 mb-4">
          <div class="bg-neutral-700/30 px-4 py-2 rounded-lg">
            <div class="text-xs text-neutral-400">Trust Score</div>
            <div class="text-2xl font-bold text-white">{regulator.trustScore}/100</div>
          </div>
          
          <div class="bg-neutral-700/30 px-4 py-2 rounded-lg">
            <div class="text-xs text-neutral-400">Max Leverage</div>
            <div class="text-2xl font-bold text-white">{regulator.maxLeverage}</div>
          </div>
          
          <div class="bg-neutral-700/30 px-4 py-2 rounded-lg">
            <div class="text-xs text-neutral-400">Min Deposit</div>
            <div class="text-2xl font-bold text-white">${regulator.minDepositRequirement.toLocaleString()}</div>
          </div>
        </div>
        
        <div class="flex items-center gap-2">
          <a 
            href={regulator.website} 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-primary-600 hover:bg-primary-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center gap-1"
          >
            Visit Website
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="border-t border-neutral-700/50 pt-6">
      <h2 class="text-xl font-bold text-white mb-4">About {regulator.name}</h2>
      <p class="text-neutral-300">
        {regulator.description}
      </p>
    </div>
  </div>
</div>