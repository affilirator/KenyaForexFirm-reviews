---
import { getSafetyRegulation } from '~/lib/review-criteria/safety-regulation';
import RichTextRenderer from './RichTextRenderer.tsx';
import RichText from '../common/RichText';

const data = await getSafetyRegulation();
---

<div
  class="bg-neutral-800/30 backdrop-blur-sm border border-neutral-700/50 rounded-2xl p-6 lg:p-8"
>
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-white mb-2">{data.name}</h2>
    <p class="text-neutral-300">{data.description}</p>
    <div class="mt-2 text-sm text-neutral-400">
      Weight: <span class="text-primary-400 font-medium">{data.weight}%</span>
    </div>
  </div>

  <div class="prose prose-invert max-w-none">
    <RichText
      content={data}
    />
  </div>
</div>
