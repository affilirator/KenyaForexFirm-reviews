<section 
class="pt-24 pb-12 bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <!-- Author Image -->
        <div class="flex-shrink-0">
          <span class='w-40 h-40 md:w-48 md:h-48 bg-neutral-800 rounded-full flex items-center justify-center border-4 border-neutral-700/50'>
          <slot name='headerImage'/>
          </span>

              <span class=" flex text-4xl font-bold text-neutral-500">
               <slot name="heading" />
              </span>
            </div>
          
        </div>
        
        <!-- Author Info -->
        <div class="flex-grow text-center md:text-left">
          <div class="mb-2">
            
              <span class="inline-block bg-primary-500/20 text-primary-400 px-3 py-1 rounded-full text-sm font-medium mb-2">
                <slot name="topMeta" >
                    <!--Default text for the topMeta slot -->
                    <p>Welcome</p>
                    </slot>
              </span>
        
          </div>
          
          <header class="text-3xl md:text-4xl font-bold text-white mb-2">
            <slot name="mainHeading" />

          </header>
          
          
            <div class="text-xl text-neutral-300 mb-4"><slot name='subtitle' /></div>
        
          
          <div class="flex flex-wrap items-center justify-center md:justify-start gap-4 text-sm text-neutral-400">
            <slot />
            
          </div>
          <slot name='introDesc' />
        </div>
      </div>
    </div>
  </section>