---
// components/TraderDetail.tsx
//'use client';

import {Image} from 'astro:assets';
import type { ForexTrader } from '~/types/payload-types'
import RichText from '~/components/common/RichText';
import HeroSlot from '~/components/slots/HeroSlot.astro'

interface Props {
  trader: ForexTrader;
}



import {
  Accordion,
  AccordionContent,
  AccordionItem,
  AccordionTrigger,
} from "@/components/ui/accordion"


const { trader } = Astro.props
---
<HeroSlot>
  <h1 id={`${trader.name.toLowerCase().replace(/\s+/g, '-')}`} slot="title"
            class="text-4xl font-display font-bold mb-4">{trader.name} - Forex Trading Journey & Accomplishments
            </h1>
             <Image src={trader.photo?.url || '/default.jpg'} alt={trader.name || 'Trader'} width={600} height={600} class="rounded-xl" slot="image" />
             <RichText content={trader.bio} slot='description' />
             <span slot="meta">
             {trader.socialLinks?.map((link: any, index: number) => (
            <a  href={link.url} class="text-blue-600 hover:underline">
              {link.platform}
            </a>
          ))}
             </span>
             <Fragment slot="badge">
            <p class="text-xl mb-6">{trader.tradingStyle} Trader | {trader.experienceYears} Years</p>
              </Fragment>



</HeroSlot>


      
         
        <div class="flex flex-col md:flex-row gap-8">
          <div class="md:w-1/3">
           
            {/* Trader Connect */}
<div class="mt-8 p-4 bg-blue-50 rounded-lg">
        <h3 class="font-bold mb-2">Connect</h3>
        <div class="flex space-x-4">
          
        </div>
      </div>

            {trader.forexBroker && (
              <div class="mt-4 p-4  rounded-lg">
                <h4 class="font-bold ">Preferred Broker</h4>
                <p class="text-sm">{typeof trader.forexBroker === 'object' ? trader.forexBroker.name : trader.forexBroker} - Regulated & Kenyan-friendly</p>
              </div>
            )}
          </div>
          <div class="md:w-2/3">
           
            <div class="max-w-none">
              
              <section class="mb-8">
        <h3 class="text-2xl font-bold mb-4">Key Achievements</h3>
        
        {trader.achievements && (
          <ul class="space-y-2">
            {trader.achievements.map((ach: any, index: number) => (
              <li class="pl-4 border-l-2 border-emerald-300">
                {ach.achievement} ({ach.year})
              </li>
            ))}
          </ul>
        )}
      </section>
       
              
            </div>
          </div>
        </div>
      

      

      {trader.strategies && trader.strategies.length > 0 && (
        <section>
          <h2 class="text-2xl font-bold mb-4">Signature Strategies</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {trader.strategies.map((strat: any, index: number) => (
              <div  class="p-4 border rounded-lg">
                <h3 class="font-semibold">{typeof strat === 'object' ? strat.name : strat}</h3>
              </div>
            ))}
          </div>
        </section>
      )}