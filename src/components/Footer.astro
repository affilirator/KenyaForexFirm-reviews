---
import { site } from '~/data/site';
---

<footer class="bg-neutral-950 border-t border-neutral-800/50 py-16 relative">
  {/* Back to top button  */}
  <button
    id="back-to-top"
    aria-label="Scroll back to top"
    class="fixed bottom-8 right-8 w-12 h-12 bg-gradient-to-r from-primary-500 to-accent-500 text-white rounded-full shadow-lg opacity-0 invisible transition-all duration-300 hover:shadow-xl hover:scale-110 focus:outline-none focus:ring-2 focus:ring-primary-400 focus:ring-offset-2 focus:ring-offset-neutral-950 z-50"
  >
    <svg
      class="w-6 h-6 mx-auto"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M5 10l7-7m0 0l7 7m-7-7v18"
      ></path>
    </svg>
  </button>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Brand Section -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div
            class="w-8 h-8 bg-gradient-to-r from-primary-500 to-accent-500 rounded-lg flex items-center justify-center"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M12 2L2 7v10c0 5.55 3.84 10 10 10s10-4.45 10-10V7l-10-5z"
              ></path>
            </svg>
          </div>
          <a
            href="/"
            class="text-xl font-display font-bold text-gradient"
          >
            {site.siteName}
          </a>
        </div>
        <p class="text-neutral-400 mb-4 max-w-sm">
          Kenya's most trusted forex broker review platform. Expert analysis for
          informed trading decisions.
        </p>
        <div class="flex space-x-4">
          {
            site.profiles.map(
              (profile) =>
                (profile.twitter && (
                  <a
                    href={profile.twitter}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-neutral-400 hover:text-primary-400"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                    </svg>
                  </a>
                )) ||
                (profile.facebook && (
                  <a
                    href={profile.facebook}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-neutral-400 hover:text-primary-400"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </a>
                ))
            )
          }
        </div>
      </div>

      <!-- Broker Categories -->
      <div>
        <h4 class="text-white font-semibold mb-4">By Regulation</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="/review/best-forex-brokers/cma-regulated/"
              class="text-neutral-400 hover:text-primary-400"
              >CMA Regulated</a
            >
          </li>
          <li>
            <a
              href="/review/best-forex-brokers/most-regulated/"
              class="text-neutral-400 hover:text-primary-400"
              >Highest Leverage</a
            >
          </li>
          <li>
            <a
              href="/review/best-forex-brokers/mpesa/"
              class="text-neutral-400 hover:text-primary-400"
              >Accepts M-Pesa</a
            >
          </li>
          <li>
            <a
              href="/review/best-forex-brokers/compare/"
              class="text-neutral-400 hover:text-primary-400"
              >Compare Forex Brokers</a
            >
          </li>
        </ul>
      </div>

      <!-- Payment Methods -->
      <div>
        <h4 class="text-white font-semibold mb-4">By Payment</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="/brokers/funding/m-pesa"
              class="text-neutral-400 hover:text-primary-400"
              >M-Pesa Brokers</a
            >
          </li>
          <li>
            <a
              href="/brokers/funding/bank-transfer"
              class="text-neutral-400 hover:text-primary-400"
              >Bank Transfer</a
            >
          </li>
          <li>
            <a
              href="/brokers/funding/credit-cards"
              class="text-neutral-400 hover:text-primary-400"
              >Credit Cards</a
            >
          </li>
          <li>
            <a
              href="/brokers/platform/metatrader-4"
              class="text-neutral-400 hover:text-primary-400"
              >MT4 Brokers</a
            >
          </li>
        </ul>
      </div>

      <!-- Legal & Info -->
      <div>
        <h4 class="text-white font-semibold mb-4">Information</h4>
        <ul class="space-y-2">
          <li>
            <a
              href="/about/"
              class="text-neutral-400 hover:text-primary-400"
              >About Us</a
            >
          </li>
          <li>
            <a
              href="/contact/"
              class="text-neutral-400 hover:text-primary-400"
              >Contact</a
            >
          </li>
          <li>
            <a
              href="/privacy/"
              rel="privacy-policy"
              class="text-neutral-400 hover:text-primary-400"
              >Privacy Policy</a
            >
          </li>
          <li>
            <a
              href="/terms/"
              rel="terms-of-service"
              class="text-neutral-400 hover:text-primary-400"
              >Terms of Service</a
            >
          </li>
          <li>
            <a
              href="/disclaimer/"
              class="text-neutral-400 hover:text-primary-400"
              >Risk Disclaimer</a
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-neutral-800/50 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-neutral-400 text-sm mb-4 md:mb-0">
          Â© {site.currentYear}
          {site.siteName}. All rights reserved.
        </p>
        <p class="text-neutral-500 text-sm text-center md:text-right">
          <strong>Risk Warning:</strong> Trading forex involves substantial risk
          of loss.
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  // Back to top button functionality
  const backToTopButton = document.getElementById('back-to-top');

  if (backToTopButton) {
    // Show/hide button based on scroll position
    const toggleButtonVisibility = () => {
      const scrolled = window.scrollY;
      if (scrolled > 300) {
        backToTopButton.classList.remove('opacity-0', 'invisible');
        backToTopButton.classList.add('opacity-100', 'visible');
      } else {
        backToTopButton.classList.remove('opacity-100', 'visible');
        backToTopButton.classList.add('opacity-0', 'invisible');
      }
    };

    // Smooth scroll to top
    const scrollToTop = () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth',
      });
    };

    // Event listeners
    window.addEventListener('scroll', toggleButtonVisibility, {
      passive: true,
    });
    backToTopButton.addEventListener('click', scrollToTop);

    // Initial check
    toggleButtonVisibility();
  }
</script>
