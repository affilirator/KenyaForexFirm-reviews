---
import { site } from '~/data/site';

import { Icon } from 'astro-icon/components'

interface Props {
  brandName?: string;
  description?: string;
}

const { 
  brandName = site.siteName,
  description = `${site.address.country}'s most trusted forex broker review platform. Expert analysis for informed trading decisions."`
} = Astro.props;
