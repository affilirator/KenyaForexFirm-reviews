---
interface ValueProps {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  values: ValueProps[];
}

const { values } = Astro.props;
---

<div class="grid md:grid-cols-3 gap-8 mb-16">
  {
    values.map((value) => (
      <div class="card-glass p-8 text-center">
        <div class="w-16 h-16 bg-gradient-to-r from-primary-500 to-accent-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
          <span class="text-2xl">{value.icon}</span>
        </div>
        <h3 class="text-xl font-semibold text-white mb-3">{value.title}</h3>
        <p class="text-neutral-400">{value.description}</p>
      </div>
    ))
  }
</div>
