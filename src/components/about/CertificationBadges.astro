---
interface Certification {
  name: string;
  status: string;
  icon: string;
}

interface Props {
  certifications: Certification[];
}

const { certifications } = Astro.props;
---

<div class="flex flex-wrap justify-center gap-6 mb-16">
  {
    certifications.map((cert) => (
      <div class="bg-gradient-to-br from-neutral-800/30 to-neutral-900/30 backdrop-blur-sm rounded-xl p-4 border border-neutral-700/50 flex items-center gap-3">
        <div class="text-2xl">{cert.icon}</div>
        <div>
          <div class="text-white font-medium">{cert.name}</div>
          <div class="text-xs text-primary-400">{cert.status}</div>
        </div>
      </div>
    ))
  }
</div>
